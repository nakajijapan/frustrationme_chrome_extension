{
  "name": "frustration.me extension",
  "description" : "ソーシャルウィッシュリスト「frustration.me」のchrome extensionです。Amazon、楽天、カラメル、ヤフーオークション、iTunesの5つのAPIを利用してアイテムの検索を行うことができます。",
  "version": "2.0.1",
  "icons": {
    "16": "24.png",
    "24": "24.png",
    "128": "128.png"
  },
 "browser_action": {
    "default_icon": "24.png",
    "default_title": "frustartion.me",
    "popup": "popup.html"
  },
  "background_page": "background.html",
  "content_scripts" : [{
     "matches" : ["http://*/*"],
     "css" : ["css/common.css"],
     "js" : ["js/content_script.js"]
  }],
  "permissions" : [
    "tabs",
    "contextMenus",
    "background",
    "http://*/*"
  ]
}
